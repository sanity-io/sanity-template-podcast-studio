{
  "private": true,
  "name": "sanity-template-podcast-studio",
  "scripts": {
    "build": "sanity-template build --template-values dev/template-values-production.json",
    "copy-node-modules": "npm run copy-studio-node-modules",
    "copy-studio-node-modules": "cp -R build/studio/node_modules template/studio/node_modules",
    "dev": "sanity-template watch --template-values dev/template-values-development.json",
    "export": "cd build/studio && sanity dataset export clean ../../data/production.tar.gz",
    "precommit": "npm run build && (cd build && npm install && npm run lint)"
  },
  "devDependencies": {
    "husky": "^3.0.2",
    "sanity-template-tools": "^1.0.0"
  }
}
